<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="60dp"
      android:textSize="20sp"
      android:text="Main Page"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:text="list关联一个placeholder"/>

  <Button
      android:id="@+id/main_start_list"
      android:layout_marginBottom="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="start listActivity"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:text="A关联一个B,在A中自动启动B"/>

  <Button
      android:id="@+id/main_start_A"
      android:layout_marginBottom="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="start Activity A"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:text="C关联一个D"/>

  <Button
      android:id="@+id/main_start_C"
      android:layout_marginBottom="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="start Activity C"/>

</LinearLayout>